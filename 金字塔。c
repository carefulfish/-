#include<stdio.h>
#pragma warning(disable:4996)
#include<stdlib.h>
#include<math.h>
#include<string.h>
int jzt(int n) {
	for (int i = 1; i <= n; i++)
	{
		for (int k = 1; k <=n-i; k++)
		{
		printf(" ");

		}
		for (int j=1;j<=2*n-1;j++)
		{
			if (j == 1 || j <= 2 * i - 1) printf("*");
			else printf(" ");
		}
		printf("\n");
	}
	return 0;
}
int main()
{
	int n;
	scanf_s("%d", &n);
	jzt(n);
	return 0;
  }
